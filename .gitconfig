[user]
    name = Ben Bass
    # Commented out in dotfiles version to avoid potential accidents...
    #email = ben.bass@codedstructure.net
[push]
    default = simple
[branch]
    autosetupmerge = true
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    outgoing = ! "git fetch && git log FETCH_HEAD..master"
    incoming = ! "git fetch && git log master..FETCH_HEAD"
    stat = status
    st = status
    ci = commit -a
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lp = log -p
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    recent = log --oneline -5
    ls = ls-files
    root = rev-parse --show-toplevel
    trunklog = log -m -p --first-parent
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
[merge]
	tool = meld
[diff]
	tool = meld
[difftool]
	prompt = false
[mergetool]
	prompt = false
